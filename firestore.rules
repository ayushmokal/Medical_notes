rules_version = '2';
// Updated: October 13, 2025 - Fixed permissions for query access
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(doctorId) {
      return isAuthenticated() && request.auth.uid == doctorId;
    }
    
    // Patients collection
    // Allow authenticated users to read their own patients
    match /patients/{patientId} {
      // Allow read if user is authenticated (they can only query their own patients)
      allow read: if isAuthenticated();
      // Allow create only if the doctorId matches the authenticated user
      allow create: if isAuthenticated() && 
                       request.resource.data.doctorId == request.auth.uid;
      // Allow update only if the doctorId matches
      allow update: if isAuthenticated() && 
                       resource.data.doctorId == request.auth.uid;
      // Allow delete only if the doctorId matches
      allow delete: if isAuthenticated() && 
                       resource.data.doctorId == request.auth.uid;
    }
    
    // Notes collection
    // Allow authenticated users to read their own notes
    // Allow creation with proper doctorId
    match /notes/{noteId} {
      // Allow read if user is authenticated (they can only query their own notes via where clause)
      allow read: if isAuthenticated();
      // Allow create only if the doctorId matches the authenticated user
      allow create: if isAuthenticated() && 
                       request.resource.data.doctorId == request.auth.uid;
      // Allow update only if the doctorId matches
      allow update: if isAuthenticated() && 
                       resource.data.doctorId == request.auth.uid;
      // Allow delete only if the doctorId matches
      allow delete: if isAuthenticated() && 
                       resource.data.doctorId == request.auth.uid;
    }
  }
}
